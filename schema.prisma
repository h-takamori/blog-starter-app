generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Author {
  id      Int     @id @default(autoincrement())
  name    String  @db.VarChar(255)
  picture String  @db.VarChar(255) @default("/assets/blog/authors/default-icon.png")
  posts   Post[]
  @@map("author")
}

model Post {
  id         Int        @id @default(autoincrement())
  slug       String     @db.VarChar(255) @unique
  title      String     @db.VarChar(255)
  excerpt    String     @db.VarChar(1023)
  coverimage String     @db.VarChar(255) @default("/assets/blog/download/default-image.jpg")
  date       String     @db.VarChar(255)
  authorid   Int
  content    String 
  author     Author     @relation(fields: [authorid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@map("post")
}

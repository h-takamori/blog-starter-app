generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Author {
  id         Int    @id @default(autoincrement())
  signinmail String @unique @db.VarChar(255)
  name       String @db.VarChar(255)
  picture    String @default("/assets/blog/authors/default-icon.png") @db.VarChar(255)
  posts      Post[]

  @@map("author")
}

model Post {
  id         Int    @id @default(autoincrement())
  signinmail String @db.VarChar(255)
  slug       String @unique @db.VarChar(255)
  title      String @db.VarChar(255)
  excerpt    String @db.VarChar(1023)
  coverimage String @default("/assets/blog/download/default-image.jpg") @db.VarChar(255)
  date       String @db.VarChar(255)
  content    String
  author     Author @relation(fields: [signinmail], references: [signinmail], onDelete: NoAction, onUpdate: NoAction)

  @@map("post")
}
